<div class="container ">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<h1><strong><%= action %> Producto</strong></h1>
			<%= form_for(@product) do |product| %>
			<div class="form-group">
				<%= product.text_field :name, class: 'form-control', placeholder: 'Ingrese el nombre' %>
			</div>
			<div class="form-group">
				<%= product.text_field :price, class: 'form-control', placeholder: 'Ingrese el precio' %>
			</div>
			<div class="form-group">
				<%= hidden_field_tag "product[category_ids][]", nil %>
				<% Category.all.each do  |category|  %>
				<%= check_box_tag "product[category_ids][]", category.id, @product.category_ids.include?(category.id), id: dom_id(category) %>
				<%= label_tag dom_id(category), category.name %><br>
				<% end %>
			</div>

			<div class="actions">
				<%= product.submit 'Guardar Producto', class: 'btn btn-primary btn-block' %>
			</div>
			<% end %>
		</div>
	</div>
</div>

