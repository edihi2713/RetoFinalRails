<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Productos</h1>
			
			<div class="text-right">
        		<%= link_to "Crear Producto", new_product_path, class: "btn btn-primary" %>
      </div>
				<table class="table">
					<thead>
						<th>Nombre</th>
						<th>Precio</th>
						<th>Categor√≠as</th>
						<th></th>
					</thead>
					<tbody>
					<% @products.each do |product| %>
						<tr>
							<td><%= product.name %></td>
							<td><%= product.price %></td>
							<td>
                				<%= product.categories.collect(&:name).join(",") %>
              				</td>
							<td>
		 			
							 <%= link_to 'Edit', edit_product_path(product),class: "btn btn-info" %> -
							  <%= link_to 'Remove', product, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure to delete this product?' } %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>